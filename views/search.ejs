<!DOCTYPE html>
<html>
<head>
    <title>Deezer Track Finder</title>
    <link rel="stylesheet" href="/music.css">
</head>
<body>
    <div class="navbar">
        <a href="/">Home</a>
        <a href="/music">Music</a>
        <a href="/artist">Artists</a>

    <% if (loggeduser.isAdmin) { %>
        <a href="/admin" class="admin-button">Admin Panel</a>
    <% } %>
        
        <div class="navbar-right">
            <form action="/logout" method="POST">
                <button type="submit" class="logout-button">Logout</button>
            </form>
        </div>
        
    </div>
    <form action="/music-search" method="GET" class="search-form">
        <input type="text" name="track" placeholder="Enter track name">
        <button type="submit" class="search-button">Search</button>
    </form>
    <h1>Search Results</h1>
    <div class="track-container">
        <% tracks.forEach(track => { %>
            <div class="track-block">
                <img src="<%= track.album.cover %>" alt="Album Cover" class="album-cover">
                <div class="track-info">
                    <p><%= track.title %> by <%= track.artist.name %></p>
                    <audio controls>
                        <source src="<%= track.preview %>" type="audio/mpeg">
                        Your browser does not support the audio element.
                    </audio>
                </div>
            </div>
        <% }); %>
    </div>
</body>
</html>
